<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ir.amirroid.screenrecorder.ui.components.native.PaintView
        android:id="@+id/paint_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/toolbox_paint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/toolbox_bg"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clear"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/delete"
                android:src="@drawable/round_delete_24"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/undo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/undo"
                android:src="@drawable/round_undo_24"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/redo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/redo"
                android:src="@drawable/round_redo_24"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/redo"
                android:src="@drawable/round_close_24"
                android:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pen_mode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/redo"
                android:src="@drawable/round_draw_24"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/rectangle_mode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/redo"
                android:src="@drawable/outline_rectangle_24"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/circle_mode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/redo"
                android:src="@drawable/outline_circle_24"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/bg_toggle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/redo"
                android:src="@drawable/round_format_color_fill_24"
                android:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ir.amirroid.screenrecorder.ui.components.native.ColorPickerView
        android:id="@+id/color_picker"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_gravity="bottom"
        android:layout_margin="24dp" />
</FrameLayout>